                      <%
                            });
                        %>

                      <%
                          }
                        %>
                    </tr>
                  </thead>
                  <tbody>
                    <%
                      if (data.length > 0) {
                        data.forEach(row => {
                    %>
                    <tr>
                      <%
                        if (row.length > 0) {
                          row.forEach(column => {
                      %>
                      <td><%- column; %></td>
                      <%
                          });
                        }
                      %>
                    </tr>
                    <%
                        });
                      }
                    %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </section>
</div>


